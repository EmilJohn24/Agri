         <font>
            <Font name="Segoe UI" size="14.0" />
         </font>
      </Label>
      <Button fx:id="addProductButton" layoutX="420.0" layoutY="42.0" mnemonicParsing="false" onMouseClicked="#addProduct" prefHeight="27.0" prefWidth="112.0" stylesheets="@css/style.css" text="Add New Product" />
      <Button fx:id="removeProductButton" layoutX="224.0" layoutY="353.0" mnemonicParsing="false" onMouseClicked="#removeProduct" stylesheets="@css/style.css" text="Remove Product" textFill="#ff2c19" />
